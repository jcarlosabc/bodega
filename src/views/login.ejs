<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8">
    <title>Login</title>
    <link rel="stylesheet" href="../css/login.css">
</head>

<body>
    <div class="login-box">
        <img src="../img/bodega.png" class="avatar" alt="Avatar Image">
        <h1>Iniciar sesión</h1>
        <form action="./php/validar-usuario.php" method="post">
            <label for="Email">Email</label>
            <input name="email-l" type="email" placeholder="Ejemplo@gmail.com">

            <label for="password">Clave</label>
            <input name="clave-l" type="password" placeholder="Ingrese su contraseña">
            <input type="submit" value="Login">
        </form>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js"> </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js"> </script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
    $("#pass").on('keypress', function(e) { 
    let s = String.fromCharCode( e.which );
    if ((s.toUpperCase() === s && s.toLowerCase() !== s && !e.shiftKey) || (s.toUpperCase() !== s && s.toLowerCase() === s && e.shiftKey)) {
        $('#GFG_DOWN').text("Mayuscula activada");
    } else if ((s.toLowerCase() === s && s.toUpperCase() !== s && !e.shiftKey) || (s.toLowerCase() !== s && s.toUpperCase() === s && e.shiftKey)) { 
        $('#GFG_DOWN').text("");
    } 
    });
    </script> 

    <% if(alert) { %>
        <script>
            Swal.fire({
                title: '<%= alertTitle %>',
                text: '<%= alertMessage %>',
                icon: '<%= alertIcon %>',
                showConfirmButton: <%= showConfirmButton %>,
                timer: <%= timer %>
      }).then(() => {
                    window.location = '/<%= ruta %>'
                })
        </script>
        <% } %>


</body>
</html>